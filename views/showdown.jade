head
  title Plan vs Plan: DARPA vs Batman
  link(href='/stylesheets/slate.min.css', rel='stylesheet', type='text/css')
  script(type='text/javascript', src='/scripts/versus.js')
body
  div.navbar
    .navbar-inner
      .container
        a.brand(href="/") Plan vs Plan
        div.nav-collapse
          ul.nav
            li.active
              a(href='/dvb') Showdown
            li
              a(href='/ranking') Ranking
            li
              a(href='/d') Add DARPA item
            li
              a(href='/b') Add Batman item

  div.container
    div.row
      div.span8
        div.hero-unit(style='padding:20px;')
          h1 DARPA vs. Batman:
          p Which would win?
        
      div.span4
        div(style='border:1px solid #fff;border-radius:8px;padding:15px;')
          h4 Disclaimer
          p
            span PlanVsPlan and this site are&nbsp;
            a(href="#") NOT affiliated
            span &nbsp;with DARPA, Batman, or DC Comics.

    div.row(style='text-align:center;text-decoration:underline;')
      .span5
        a(href="#", onclick="voted()")
          h3#ditem #{darpa.item}
          img#dpic.contender(src='#{darpa.pic}', style='margin-left:auto;margin-right:auto;max-width:100%;max-height:350px;cursor:pointer;border:1px solid blue;')
          br
          span#dcredit #{darpa.credit}
          br
          span#dvotes(style="font-size:16pt;")
      
      .span2
        img#middle(src="http://i.imgur.com/RY1V1.gif", style="margin-top:100px;")
      
      .span5
        a(href="#", onclick="voteb()")
          h3#bitem #{batman.item}
          img#bpic.contender(src='#{batman.pic}', style='margin-left:auto;margin-right:auto;max-width:100%;max-height:350px;cursor:pointer;border:1px solid blue;')
          br
          span#bvotes(style="font-size:16pt;")