head
  title Plan vs Plan: #{mainname}
  link(href='/stylesheets/bootstrap.min.css', rel='stylesheet', type='text/css')
  script(type='text/javascript', src='/scripts/basicversus.js')
  script(type='text/javascript') ditem = "#{ditem.name}"; bitem = "#{bitem.name}"; topic = "#{_id}";
body
  div.navbar
    .navbar-inner
      .container
        a.brand(href="/") Plan vs Plan
        div.nav-collapse
          ul.nav
            li.active
              a(href='/vs?topic=#{_id}') Showdown
            li
              a(href='/ranking?topic=#{_id}') Ranking
            li
              a(href='/additem?topic=#{_id}&support=d') Add #{ditem.name} item
            li
              a(href='/additem?topic=#{_id}&support=b') Add #{bitem.name} item

  div.container
    div.row
      div.span8
        div.hero-unit(style='padding:20px;')
          h1 #{ditem.name} vs. #{bitem.name}:
          p Which would win?
        
      div.span4
        div(style='border:1px solid #fff;border-radius:8px;padding:15px;')
          h4 Disclaimer
          p
            span PlanVsPlan and this site are&nbsp;
            a(href="#") NOT affiliated
            span &nbsp;with DARPA, Batman, or DC Comics.

    div.row(style='text-align:center;text-decoration:underline;')
      .span5
        a(href="#", onclick="voter(0)")
          h3#ditem #{ditem.name}
          img#dpic.contender(src='#{ditem.startpic}', style='margin-left:auto;margin-right:auto;max-width:100%;max-height:350px;cursor:pointer;border:1px solid blue;')
          br
          span#dcredit
          br
          span#dvotes(style="font-size:16pt;")
      
      .span2
        img#middle(src="http://i.imgur.com/P8VmU.png", style="margin-top:100px;")
      
      .span5
        a(href="#", onclick="voter(1)")
          h3#bitem #{bitem.name}
          img#bpic.contender(src='#{bitem.startpic}', style='margin-left:auto;margin-right:auto;max-width:100%;max-height:350px;cursor:pointer;border:1px solid blue;')
          br
          span#bcredit
          br
          span#bvotes(style="font-size:16pt;")